@model IEnumerable<BH.Models.CTPhieuGH>

@{
    ViewBag.Title = "PhieuGiao";
    Layout = "~/Views/Shared/_LayoutNVPhuTrach.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="center_content">
        <p>
            @Html.ActionLink("Thêm mới", "PG_Them")
        </p>
        <table class="table table-striped table-bordered table-hover" id="datatable">
            <thead>
                <tr class="info">
                    <th>Phiếu:</th>
                    <th>Tên Hàng:</th>
                    <th>Số lượng:</th>
                    <th>Đơn giá:</th>
                    <th>Thành tiền:</th>
                    <th>Trạng thái</th>
                    <th>Ngày lập:</th>
                    <th>Của hàng:</th>
                    <th>Nhân viên:</th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SOPG)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatHang.TenHang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongGiao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThanhTien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhieuGiaoHang.TrangThai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhieuGiaoHang.NgayLapPhieu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhieuGiaoHang.MSCH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhieuGiaoHang.MSNV)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "PG_Sua", new { id=item.SOCTPG }) |
                        @Html.ActionLink("Chi Tiết", "PG_ChiTiet", new { id=item.SOCTPG }) |
                        @Html.ActionLink("Xóa", "PG_Xoa", new { id=item.SOCTPG  })
                    </td>
                </tr>
            }

        </table>
        </div>
</body>
</html>
