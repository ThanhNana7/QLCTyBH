@model BH.Models.CTPhieuGH

@{
    ViewBag.Title = "PG_Xoa";
    Layout = "~/Views/Shared/_LayoutNVPhuTrach.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="center_content">
        <h3>Bạn có chắc muốn xóa phiếu này?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Tên hàng:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MatHang.TenHang)
                </dd>

                <dt>
                    Trạng thái:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhieuGiaoHang.TrangThai)
                </dd>

                <dt>
                    Số lượng:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SoLuongGiao)
                </dd>

                <dt>
                    Đơn giá:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DonGia)
                </dd>

                <dt>
                    Thành tiền:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ThanhTien)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-default" /> |
                    @Html.ActionLink("Quay lại", "PhieuGiao")
                </div>
            }
        </div>
        </div>
</body>
</html>
