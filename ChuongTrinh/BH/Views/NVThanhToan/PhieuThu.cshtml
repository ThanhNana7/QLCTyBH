@model IEnumerable<BH.Models.CTPhieuTT>

@{
    ViewBag.Title = "PhieuThu";
    Layout = "~/Views/Shared/_LayoutNVThanhToan.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <div class="center_content">
        <p>
            @Html.ActionLink("Thêm mới", "PT_Them")
        </p>
        <table class="table table-striped table-bordered table-hover" id="datatable">
            <thead>
                <tr class="info">
                    <th>
                        Tên hàng:
                    </th>
                    <th>
                        Số lượng:
                    </th>
                    <th>
                        Đơn giá:
                    </th>
                    <th>
                        Thành tiền:
                    </th>
                    <th>
                        Trạng thái:
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatHang.TenHang)
                    </td>   
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThanhTien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhieuThanhToan.TrangThai)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "PT_Sua", new { id = item.SOCTPTT }) |
                        @Html.ActionLink("Chi Tiết", "PT_ChiTiet", new { id=item.SOCTPTT }) |
                        @Html.ActionLink("Xóa", "PT_Xoa", new {  id=item.SOCTPTT })
                    </td>
                </tr>
            }

        </table>
        </div>
</body>
</html>
