@model BH.Models.LoaiHang

@{
    ViewBag.Title = "LH_Them";
    Layout = "~/Views/Shared/_LayoutNVThanhToan.cshtml";
}
<div class="center_content">
    <h2>Thêm mới loại hàng</h2>

    @using (Html.BeginForm("LH_Them", "NVThanhToan", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <p class="control-label col-md-2">Tên Loại:</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenLoaiHang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenLoaiHang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <p class="control-label col-md-2">Hình Ảnh:</p>
                <div class="col-md-10">
                    <input type="file" name="fileupload" />
                    @ViewBag.Thongbao
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "LoaiHang")
    </div>
</div>