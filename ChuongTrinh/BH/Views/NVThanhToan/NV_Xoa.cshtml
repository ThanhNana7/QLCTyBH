@model BH.Models.NVPhuTrach

@{
    ViewBag.Title = "NV_Xoa";
    Layout = "~/Views/Shared/_LayoutNVThanhToan.cshtml";
}

<div class="center_content">

    <h3>Bạn có chắc muốn xóa nhân viên này?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Họ Tên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>
                Phái:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phai)
            </dd>

            <dt>
                Năm Sinh:
            </dt>

            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.NamSinh)
            </dd>

            <dt>
                Địa Chỉ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>
                SĐT
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>

            <dt>
                Tài Khoản:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TaiKhoan)
            </dd>

            <dt>
                Mật khẩu:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MatKhau)
            </dd>


        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Quay lại", "NhanVien")
            </div>
        }
    </div>
</div>