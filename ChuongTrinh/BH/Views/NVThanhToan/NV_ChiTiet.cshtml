@model BH.Models.NVPhuTrach

@{
    ViewBag.Title = "NV_ChiTiet";
    Layout = "~/Views/Shared/_LayoutNVThanhToan.cshtml";
}

<div class="center_content">
    <h2>Thông tin chi tiết nhân viên</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Họ Tên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HoTen)
            </dd>

            <dt>
                Phái:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phai)
            </dd>

            <dt>
                Năm Sinh:
            </dt>

            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.NamSinh)
            </dd>

            <dt>
                Địa Chỉ:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>
                SĐT
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>

            <dt>
                Tài Khoản:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TaiKhoan)
            </dd>

            <dt>
                Mật khẩu:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MatKhau)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Sửa", "NV_Sua", new { id = Model.MSNV }) |
        @Html.ActionLink("Quay lại", "NhanVien")
    </p>
</div>